      <th>Title</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @coaches.each do |coach| %>
      <tr>
        <td><%= link_to coach.name, coach %></td>
        <td><%= coach.team %></td>
        <td><%= coach.title %></td>
