<h1>WELCOME TO FOOTBALL MANAGER</h1>

<%= link_to "Players", players_path, id: 'players_id'%>

<%= form_tag(players_path, method: 'get') do %>
  <%= text_field_tag :search, nil, placeholder: "Search by name or team number!", id: 'searchField', class: 'search'  %>
  <%= button_tag 'Search', id: 'searchButton', class: 'search'%>
<% end %>

<%= form_tag("/find", method: 'get') do %>
  <%= text_field_tag :name, nil, placeholder: "Enter player name", id: 'name'  %>
  <%= text_field_tag :number, nil, placeholder: "Enter player number", id: 'number'  %>
  <%= button_tag 'Find'%>
<% end %>
