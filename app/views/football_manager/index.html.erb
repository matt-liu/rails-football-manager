	<% if flash[:notice] %>
		<div class="notice"><%= flash[:notice] %></div>
	<% end %>
	<h2 class='tableHeader'><%= link_to "Teams", teams_path %></h2>
	<h2 class='tableHeader'><%= link_to "Games", games_path %></h2>

	<h2 class='tableHeader'><%= link_to "Players and Coaches", players_path, id: 'players_id'%></h2>
	<h2 class='tableHeader'><%= link_to "Transfer Players", transfer_path %></h2>


	<table id=searchTable>
	<tr>
		<%= form_tag(players_path, method: 'get') do %>
			<td>
			<%= text_field_tag :search, nil, placeholder: "Search by name or number", id: 'searchField', class: 'roundUpsize'  %>
		</td>
		<td>
			<%= button_tag 'Search', id: 'searchButton', class: 'roundUpsize button'%>
		</td>
		<% end %>

		<td id=spacer>
		</td>


		<%= form_tag("/find", method: 'get') do %>
			<td>
				<%= text_field_tag :name, nil, placeholder: "Enter player name", id: 'nameField', class: 'roundUpsize'  %>
				<%= text_field_tag :number, nil, placeholder: "Enter player #", id: 'numberField', class: 'roundUpsize'  %>
			</td>
			<td>
				<%= button_tag 'Find', class: 'roundUpsize button'%>
			</td>
		<% end %>
	</tr>
	</table>

