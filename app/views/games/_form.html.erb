<div class='centered'>
<%= form_for(@game) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation" class='centered'>
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" id = 'home_team'>
    <%= f.label :home_team_id %><br>
    <%= f.collection_select(:home_team_id, Team.all, :id, :name)%>
  </div>
  <div class="field" id = 'away_team'>
    <%= f.label :away_team_id %><br>
    <%= f.collection_select(:away_team_id, Team.all, :id, :name, {}, {:class=>'roundUpsize'})%>
  </div>
  <div class="field">
    <%= f.label :home_team_score %><br>
    <%= f.text_field :home_team_score, :class => 'roundUpsize' %>
  </div>
  <div class="field">
    <%= f.label :away_team_score %><br>
    <%= f.text_field :away_team_score, :class => 'roundUpsize' %>
  </div>
  <div class="date">
    <%= f.label :date %><br>
    <%= f.text_field :date, :class => 'roundUpsize' %>
  </div>
  <div class="actions verticalSpace">
    <%= f.submit 'Submit', :class =>'button' %>
  </div>
<% end %>
</div>