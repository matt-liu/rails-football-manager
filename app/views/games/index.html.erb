<h1>Listing games</h1>

<table class = 'hover-table sortable'>
  <thead>
    <tr>
      <th>Home team</th>
      <th>Away team</th>
      <th>Home team score</th>
      <th>Away team score</th>
      <th>Date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.home_team.name %></td>
        <td><%= game.away_team.name %></td>
        <td><%= game.home_team_score %></td>
        <td><%= game.away_team_score %></td>
        <td><%= game.date %></td>
        <td><%= link_to 'Show', game %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path, class: 'button' %>
