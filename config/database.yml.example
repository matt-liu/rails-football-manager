# SQLite version 3.x
#   gem install sqlite3
#
#   Ensure the SQLite 3 gem is defined in your Gemfile
#   gem 'sqlite3'
development:
  adapter: postgresql
  encoding: unicode
  database: rails-football-manager_development
  pool: 5
  timeout: 5000
  username: postgres
  password: password
  min_messages: WARNING

# Warning: The database defined as "test" will be erased and
# re-generated from your development database when you run "rake".
# Do not set this db to the same as development or production.
test: &test
  adapter: postgresql
  encoding: unicode
  database: rails-football-manager_test
  pool: 5
  timeout: 5000
  username: postgres
  password: password
  min_messages: WARNING

production:
  adapter: postgresql
  encoding: unicode
  database: rails-football-manager_production
  pool: 5
  timeout: 5000

cucumber:
  <<: *test
